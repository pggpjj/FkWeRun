Page{
  padding: 0px;
  width: 100%;
  height:100%;
}
.container {
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  align-items: center;
} 
button::after{
  border: none;
}
.btn-hover{
  transition: transform 0.5s; 
  transform: scale(0.9,0.9); 
}
.trans-btn{
  padding: 0px;
  background-color: transparent;
}
.trans-btn::after{
  border: none;
}
.mr-20{
  margin-right: 20px;
}
.mr-15{
  margin-right: 15px;
}
.mr-10{
  margin-right: 10px;
}
.mt-10{
