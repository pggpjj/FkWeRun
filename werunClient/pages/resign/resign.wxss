
.user-nickname-block{
  margin: 30px 0px 10px 0px;
  display: flex;
  flex-direction: row;
  justify-content: center;
  font-weight: bold;
}

.resign-block{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

/**
* 导航
**/
.navigate-bar-clock{
  width: 100%;
  margin-top: 20rpx;
  height: 35px;
  background: #FFFFFF;
  display: flex;
  flex-direction: row;
  padding: 0px;
  justify-content: space-between;
  border-bottom: 1px solid #ff7e38;
}
.navigate-item{
  margin: 0px;
  width: 50%;
  text-align: center;
  height: 35px;
  line-height: 35px;
  color: #ff7e38;
  font-size: 16px;
}
.resign-block-button{
  margin: 0px;
  margin-right: 20px;
  background-color: #40d07f;
  color: #FFFFFF;
  height: 30px;
  line-height: 30px;
}
.tip-text{
  margin-top:15px;
  font-size: 14px;
  color: gray;
  text-align: center;
  width: 100%;
}
/**
* 补签
*/
.resign-content-block{
  margin-top: 5px;
  display: flex;
  flex-direction: column;
  width: 100%;
}
.resign-content-item{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content:space-around;
  padding: 10px 10px;
  align-items: center;
  border-bottom: 1px solid #ececec;
}
.resign-content-item view{
  width: 33.3%;
}

/**
**弹出层2
*/
.drawer_screen_2 {  
  width: 100%;  
  height: 100%;  
  position: fixed;  
  top: 0;  
  left: 0;  
  z-index: 1000;  
  overflow: hidden;  
  background: rgba(0, 0, 0, 0.3);
}
.drawer_box_2 {  
  width: 100%;
  height:100%;
  display: flex;
  flex-direction: column;
  justify-content:center;
  overflow: hidden;  
  position: fixed;  
  bottom: 0px; 
  z-index: 1001;  
  text-align: center;
  background: rgba(0, 0, 0, 0.3);
} 
.drawer_content_box_2{
  width: 100%;
  height: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.drawer_content_2{
  height: 150px;
  width: 80%;
  display:flex;
	flex-direction:column;
  justify-content: space-between;
  flex-wrap: wrap;
  background-color: #FFFFFF;
  padding: 20px 0px;
  border-radius: 10px;
}
.drawer_share_btn_block_2{
  display: flex;
  flex-direction: row;
  justify-content: center;
}
.drawer_btn_2{
  height: 70rpx;
  line-height: 70rpx;
}
.drawer_share_btn{
  background-color: #40d07f;
  color: #FFFFFF;
}
